# this should live on server at /etc/logrotate.d/ak0

/var/log/ak0/ak0.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0640 65532 65532
    olddir /var/log/ak0/old_logs
    su 65532 65532
    postrotate
        su - iceking -c "docker kill --signal=USR1 ak0"
    endscript
}
