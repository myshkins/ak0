# this lives on server at /etc/logrotate.d/ak0
/var/log/ak0/ak0.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0666 65532 65532
    olddir /var/log/ak0/old_logs
    su 65532 65532
    prerotate
        su - iceking -c "docker kill --signal=USR1 ak0"
    endscript
}
